<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Globe Correcteur | Admin{% endblock %}</title>
    <meta name="robots" content="noindex">

    <link rel="icon" href="{{ asset('images/favicon.png') }}" type="image/png" sizes="16x16">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="{{ asset('admin/plugins/fontawesome-free/css/all.min.css') }}">
    {% block cssplugins %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('admin/css/adminlte.min.css') }}">
    {{ importmap('admin') }}
    {% block css %}{% endblock %}
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
        </ul>
    </nav>

    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="{{ path('admin_home') }}" class="brand-link">
            <img src="{{ asset('images/favicon.png') }}" alt="Globe Correcteur Logo" class="brand-image img-circle"
                 style="width: 33px">
            <span class="brand-text font-weight-light">Globe Correcteur</span>
        </a>

        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    {% if app.user.employee is not null %}
                    <img src="{{ asset('images/' ~ app.user.employee.photo) }}" class="img-circle elevation-2"
                         alt="User Image">
                    {% endif %}
                </div>
                <div class="info">
                    <a href="{{ path('user_edit',{user: app.user.id}) }}" class="d-block">
                        {% if app.user.employee is not null %}{{ app.user.employee.name }}{% else %}{{ app.user.email }}{% endif %}
                    </a>
                </div>
            </div>

            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                    data-accordion="false">
                    <li class="nav-item">
                        <a href="{{ path('admin_customers') }}" class="nav-link">
                            <i class="nav-icon fas fa-users"></i>
                            <p>Clients</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin_orders') }}" class="nav-link">
                            <i class="nav-icon fas fa-file-invoice"></i>
                            <p>Commandes</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin_prices') }}" class="nav-link">
                            <i class="nav-icon fas fa-dollar-sign"></i>
                            <p>Tarifs</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin_employees') }}" class="nav-link">
                            <i class="nav-icon fas fa-user-tie"></i>
                            <p>Employ√©s</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin_bank') }}" class="nav-link">
                            <i class="nav-icon fas fa-university"></i>
                            <p>Banque</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{% block pagetitle %}{% endblock %}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            {% block breadcrumb %}{% endblock %}
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="container-fluid">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    {# <aside class="control-sidebar control-sidebar-dark">
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>  #}

    <footer class="main-footer">
        <div class="float-right d-none d-sm-inline"></div>
        <strong>Copyright &copy; 2023 <a href="javascript:">Arthur Williams</a>.</strong> All rights reserved.
    </footer>
</div>
<script src="{{ asset('admin/plugins/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('admin/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% block jsplugins %}{% endblock %}
<script src="{{ asset('admin/js/adminlte.min.js') }}"></script>
{% block js %}{% endblock %}
</body>
</html>
