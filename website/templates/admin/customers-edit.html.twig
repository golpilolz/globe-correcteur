{% extends 'base-admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Globe Correcteur | Admin{% endblock %}

{% block pagetitle %}Modifier le client : {{ customer.name }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_home') }}">Accueil</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_customers') }}">Clients</a></li>
    <li class="breadcrumb-item active">Modifier</li>
{% endblock %}

{% block body %}
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Informations sur le client</h3>
                </div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                    {{ form_rest(form) }}
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.card -->
    </div>
{% endblock %}
